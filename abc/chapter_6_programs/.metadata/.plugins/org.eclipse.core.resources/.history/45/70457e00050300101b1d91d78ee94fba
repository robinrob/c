#include "find_root.h"

int cnt = 0;
const dbl eps = 1e-13;

int main(void)
{
	dbl a = -10.0;
	dbl b = +10.0;
	dbl root;

	int order = 2;
	assert(f(a, order) * f(b, order) <= 0.0);
	root = bisection(f a, b);
	printf("%s%d\n%s% .15f\n%s% .15f\n",
			"No. of fct calls: ", cnt,
			"Approximate root: ", root,
			"  Function value: ", f(root, order));
	return 0;
}
