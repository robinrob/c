#include "mergeSort.h"

void merge_sort(int *a, int n);

int main(void)
{
	int *a, n;

	printf("Enter size for array: ");
	scanf("%d", &n);

	a = calloc(n, sizeof(int));

	srand(time(NULL));
	fill_array(a, n);
	printf("\nArray (unsorted):\n");
	wrt_array(a, n);

	for (m = power; m > 1; m /= 2) {
		if (n % m)
			merge_sort(&an = n % m), m);
		else
			merge_sort(&a[0], m);


	printf("\nSorting array:\n");
	merge_sort(a, n);
	printf("\nOrdered array:\n");
	wrt_array(a, n);

	free(a);

	return 0;
}

void merge_sort(int *a, int n)
{
	assert((n % 2) == 0);
	register int i = n, j, k;
	int power = 0, *b;

	while (i >= 2) {
		i /= 2;
		++power;
	}
	printf("power: %d\n", power);

	b = calloc(n, sizeof(int));

	for (i = 1; i < n; i *= 2) {
		for (j = 0; (j + i) < n; j += 2 * i) {
			printf("i: %d\nj: %d\n", i, j);
			printf("merge(a[%d], %d, a[%d], %d)\n", j, i, j + i, i);
			merge(a + j, i, a + j + i, i, b + j);
			printf("Array b:\n");
			wrt_array(b, n);
		}
		for (k = 0; k < n; ++k)
			a[k] = b[k];
	}
	free(b);
}
