/* How arrays can be manipulated by functions using pointer
 * operations
 * arraysAsArguments.c
 *
 *  Created on: Feb 4, 2010
 *      Author: user
 */

#include <stdio.h>

#define N 100

double sum(double *a, int n);

int main(void)
{
	double v[N];
	register int i;

	printf("Array:\n");
	for (i = 0; i < N; ++i) {
		*(v + i) = i * 2;
		printf("v[%d]: %d\n", i, *(v + i));
	}

	printf("Sum of array: %d\n", sum(v, N));
}

double sum(double *a, int n)
{
	register int i;
	double sum = 0.0;

	for (i = 0; i < n; ++i)
		sum += *(a + 1);
	return sum;
}
