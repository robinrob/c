#include <stdio.h>
#include <time.h>

void bubbleSort(int *, int);
void swap(int *, int *);
void printArray(int *, int);

int main(void)
{
	int n;
	register int i;

	printf("Enter n: ");
	scanf("%d", &n);

	srand(time(NULL));

	for (i = 0; i < n; ++i)
		*(a + i) = i + 5;

	bubbleSort(a, n);
	printArray(a, n);

	return 0;
}

void bubbleSort(int *a, int n)
{
	register int i, j;
	int cunt = 0;

	for (i = 0; i < n - 1; ++i)
		for (j = n - 1; j > i; --j) {
			printArray(a, N);
			if (*(a + j) > *(a + j - 1))
				swap(&(*(a + j - 1)), &(*(a + j)));
			++cunt;
		}
	printf("Number of iterations: %d\n", cunt);
}

void swap(int *a, int *b)
{
	int temp;
	temp = *a;
	*a = *b;
	*b = temp;
}

void printArray(int *a, int n)
{
	register int i;

	printf("Array:\n");
	for (i = 0; i < n; ++i)
		printf("a[%d]: %d\n", i, *(a + i));
	printf("\n");
}
