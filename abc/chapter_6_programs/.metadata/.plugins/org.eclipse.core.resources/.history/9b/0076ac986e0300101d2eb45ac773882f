/* Testing use of type ptrdiff_t defined in stddef.h (which is defined in there to
 * be of type long int).
 * prt_diff.c
 *
 *  Created on: Dec 9, 2010
 *      Author: user
 */

#include <stdio.h>
#include <stddef.h>

int main(void)
{
	int a, b, c, *p = &a, *q = &b, *r = &c;
	ptrdiff_t diff = r - p;
	printf("diff = %ld\n", diff);
	diff = p - (int *)0;
	printf("diff = %d\n", diff);
	return 0;
}
