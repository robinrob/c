/* Some arithmetic operations with pointers
 * pointers2.c
 *
 *  Created on: Feb 4, 2010
 *      Author: user
 */

#include <stdio.h>

void printHello(void);

int main(void)
{
	int i = 3, j = 5, *p = &i, *q = &j, *r;

	printf("%s%d\n%s%d\n%s%d\n%s%d\n",
			"p == &i: ", p == &i	, //1
			"* * & p: ", * * & 	p,   //3
			/*"r = &x", r = &x,*/		//address of x
			"7 * * p / * q + 7: ", 7 * * p / * q + 7,  //1
			"* (r = &j) *= *p: ", * (r = &j) *= *p); //15

	int z = 2;
	int *z = &z;
	printf("%p\n%p\n", z, &z);

	return 0;
}

void printHello(void)
{
	printf("Hello!\n");
}
