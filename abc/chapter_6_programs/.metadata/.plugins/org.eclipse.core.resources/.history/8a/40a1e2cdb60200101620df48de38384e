#include <stdio.h>

#define PI 3.14159265

double one_over(double x);
double sum_square(double f(double), int n);

int main(void)
{
	printf("Sum of pi squared over 6: %lf\n", sum_square(one_over, 1));
	printf("Calculation of pi squared over 6: %lf\n", PI * PI / 6);
	return 0;
}

double one_over(double x)
{
	return 1.0 / x;
}

double sum_square(double f(double x), int n)
{
	int k;
	double sum = 0.0;
	for (k = 1; k < n; ++k) {
		sum += f(k) * f(k);
	}
	return sum;
}
