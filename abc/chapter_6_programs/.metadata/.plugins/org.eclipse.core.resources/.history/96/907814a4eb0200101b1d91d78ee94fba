#include <stdio.h>

#define PI 3.141592653589793238462643383279502884197169399375105820974944592307

double one_over(double x);
double sum_square(double f(double), int n);

int main(int argc, char* argv[])
{
	int n = *(argv[1]);
	printf("*(argv[1]): %d", *(argv[1]));
	printf("Calculation of pi squared over 6: %lf\n", sum_square(one_over, n));
	printf("Actual value of pi squared over 6: %lf\n", PI * PI / 6.0);
	printf("Fucking difference: %lf\n", (PI * PI / 6.0) - sum_square(one_over, n));
	return 0;
}

double one_over(double x)
{
	return 1.0 / x;
}

double sum_square(double f(double x), int n)
{
	int k;
	double sum = 0.0;
	for (k = 1; k <= n; ++k) {
		sum += f(k) * f(k);
	}
	return sum;
}
