/* Simulating call by reference by using pointers
 * callByReference.c
 *
 *  Created on: Feb 4, 2010
 *      Author: user
 */

#include <stdio.h>

void swap(int *, int *);

int main(void)
{
	int a = 1, b = 2, *p = a, *q = b;

	printf("a: %p\nb: %p\n", *p, *q);
	swap(p, q);
	printf("a: %p\nb: %p\n", *p, *q);

	return 0;
}

void swap(int *p, int *q)
{
	int *temp = p;
	p = q;
	q = temp;
}
