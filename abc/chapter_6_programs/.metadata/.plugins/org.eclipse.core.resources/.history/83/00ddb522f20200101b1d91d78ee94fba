/* Finds the root of a given polynomial within the given range
 * findRoot.c
 *
 *  Created on: Feb 14, 2010
 *      Author: user
 */

#include "findRoot.h"

#define MESSAGE "This program will find the roots of the specified polynomial within the given range, if there are any."

int main(void)
{
	int order;
	float *coeffs, min_x, max_x;
	register int i;

	textInABox(MESSAGE, strlen(MESSAGE), 4);

	printf("Enter order of function: ");
	scanf("%d", &order);
	coeffs = calloc(order + 1, sizeof(float));

	for (i = 0; i <= order; ++i) {
		printf("Enter coefficient %c: ", 'a' + i);
		coeffs[i] = scanf("%f", &coeffs[i]);
	}

	printf("Enter lower end of range: ");
	scanf("%f", &min_x);
	printf("Enter upper end of range: ");
	scanf("%f", &max_x);


}
