#include "findRoot.h"

void textInABox(char *text, int text_length, int lines)
{
	int i, j, cunt = 0;
	int width = text_length / lines + 1;

	(text[text_length - 1]) = '/0';

	/*printf("\n");
	for (j = 1; j <= (width + 4); ++j)
		printf("#");
	printf("\n# ");
	for (i = 0; i < textLength; ++i) {
		printf("%c", *(text + i));
		++cunt;
		if ((((cunt % width) == 0)) && (cunt != (textLength))) {
			printf(" #\n# ");
			cunt = 0;
				if (*(text + i + 1) == ' ')
					++i;
		}
	}

	if ((cunt % width) != 0)
		for ((j = (width - (cunt % width))); (j > 0); --j)
			printf(" ");

	printf(" #\n");
	for (j = 1; j <= (width + 4); ++j)
		printf("#");
	printf("\n\n");*/



		printf("\n");
		//Prints top edge of text box which is made of # characters*/
		for (j = 1; j <= (width + 4); ++j)
			printf("#");
		printf("\n# ");

		//Prints the text in lines of width specified above, bordered by # characters
		for (i = 0; i < text_length; ++i) {
			printf("%c", text[i]);
			++cunt;
			if ((((cunt % width) == 0)) && (cunt != text_length)) {
				printf(" #\n# ");
			}
		}

		//Fills in any remaining empty space before right-hand edge of box
		if ((cunt % width) != 0) {
			for ((j = (width - (cunt % width))); (j > 0); --j) {
				printf(".");
			}
		}

		printf(" #\n");

		//Prints bottom edge of box
		for (j = 1; j <= (width + 4); ++j)
			printf("#");
		printf("\n\n");
}
