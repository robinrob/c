/* Simulating call by reference by using pointers
 * callByReference.c
 *
 *  Created on: Feb 4, 2010
 *      Author: user
 */

#include <stdio.h>

void swap(int *, int *);

int main(void)
{
	int a = 1, b = 2, *p = &a, *q = &b;

	printf("a: %d\nb: %d\n", *p, *q);
	swap(&a, &b);
	printf("a: %d\nb: %d\n", *p, *q);

	return 0;
}

void swap(int *a, int *b)
{
	int temp = a;
	a = b;
	b = temp;
}
