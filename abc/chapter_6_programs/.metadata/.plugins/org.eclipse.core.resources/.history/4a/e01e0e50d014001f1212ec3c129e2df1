#include "mergeSort.h"

void merge_sort(int *a, int n);

int main(void)
{
	int *a, n, power;

	printf("Enter size for array: ");
	scanf("%d", &n);

	a = calloc(n, sizeof(int));

	srand(time(NULL));
	fill_array(a, n);
	printf("\nArray (unsorted):\n");
	wrt_array(a, n);

	for (power = 1; power < n; power *= 2);

	printf("power: %d\n", power);

	printf("\nSorting array:\n");
	for (; power > 1; power /= 2) {
		printf("n %% power: %d\n", n % power);
		if (n % power && (power / 2) < n) {
			printf("sub-array: ");
			wrt_array(&a[n - power / 2], power / 2);
			merge_sort(&a[n - power / 2], power / 2);
			n = n - power / 2;
		}
		else
			merge_sort(&a[0], power);
	}


	printf("\nOrdered array:\n");
	wrt_array(a, n);

	free(a);

	return 0;
}

void merge_sort(int *a, int n)
{
	assert((n % 2) == 0);
	register int i, j, k;
	int power = 0, *b;


	b = calloc(n, sizeof(int));

	for (i = 1; i < n; i *= 2) {
		for (j = 0; (j + i) < n; j += 2 * i) {
			printf("i: %d\nj: %d\n", i, j);
			printf("merge(a[%d], %d, a[%d], %d)\n", j, i, j + i, i);
			merge(a + j, i, a + j + i, i, b + j);
			printf("Array b:\n");
			wrt_array(b, n);
		}
		for (k = 0; k < n; ++k)
			a[k] = b[k];
	}
	free(b);
}
