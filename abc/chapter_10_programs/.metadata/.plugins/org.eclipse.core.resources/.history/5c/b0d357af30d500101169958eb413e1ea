/* Demonstration of swapping the data of two nodes. */

#include <stdio.h>
#include <stdlib.h>

struct NODE {
	int id;
	struct NODE *next;
};

typedef struct NODE NODE;

void swap(NODE *n1, NODE *n2);
void print_list(NODE *list);

int main(void)
{
	NODE *list, *el2;
	list -> id = 0;
	list -> next = el2;
	el2 -> id = 99;
	el2 -> next = NULL;
	print_list(list);
	swap(list, list -> next);
	print_list(list);
	return 0;
}

/* Prints a list of DATA values by following the links. */
void print_list(NODE *list)
{
	while(list != NULL) {
		print_node_data(list);
		list = list -> next;
	}
	if (list == NULL) {
		printf("list NODE:  NULL\n");
	}
	else {
		printf("--MISSING NULL!--\n");
	}
	putchar('\n');
}

/* Swaps the data values of two nodes. */
void swap(NODE *n1, NODE *n2)
{
	DATA tmp = n1 -> data;
	n1 -> data = n2 -> data;
	n2 -> data = tmp;
}
