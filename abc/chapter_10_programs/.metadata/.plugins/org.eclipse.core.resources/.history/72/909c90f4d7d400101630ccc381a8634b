/* Main function for Doubly-Linked List project. */

#include "dllist.h"

#define N 5

int main(void)
{
	DATA *d = calloc(N, sizeof(DATA));
	NODE *list;

	d[0].name = "Robin",		d[0].age = 23, d[0].weight = 63;
	d[1].name = "Bob Brown",	d[1].age = 36, d[1].weight = 83;
	d[2].name = "Snake Doc",	d[2].age = 39, d[2].weight = 10000;
	d[3].name = "Betty Blue",	d[3].age = 36, d[3].weight = 75;
	d[4].name = "Mac",			d[4].age = 37, d[4].weight = 87;

	/* Print the list. */
	list = create_l(d, N);
	printf("The list:\n");
	print_list(list);
	printf("In reverse:\n");
	print_list_reverse(list);

	/* Insert an item into the list & print the list. */
	DATA newd;
	newd.name = "INSERTION";
	newd.age = 1;
	newd.weight = 0;
	insert(newd, &list, 8);
	printf("With new insertion:\n");
	print_list(list);
	printf("In reverse:\n");
	print_list_reverse(list);

	/* Delete the item from the list & print the list. */
	delete(&list, 5);
	printf("With a deletion:\n");
	print_list(list);
	printf("In reverse:\n");
	print_list_reverse(list);

	return 0;
}
