#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct {
	char *name;
	int age;
	int weight;
} DATA;

struct NODE {
	DATA data;
	struct NODE *prev;
	struct NODE *next;
};

typedef struct NODE NODE;

/* Prints a list of DATA values by following the links. */
void print_list(NODE *list);

/* Creates a DATA list from an array of DATA values. */
NODE* create_l(DATA *array, int n);

/* Inserts a DATA item into a list, at the given list
 * index (starting from 0).
 */
void insert(DATA d, NODE *list, int index);

/* Checks to see whether a list is a cycle. */
boolean iscycle(NODE *list);

/* Boolean values */
typedef enum {true, false} boolean;


