/* Concatenation functions for Singly-Linked Lists. */

#include "sllist.h"

/* Concatenates list2 onto the end of list1,
 * no matter what!
 */
void concat(NODE *list1, NODE *list2)
{
	while (list1 -> next != NULL) {
		list1 = list1 -> next;
	}
	list1 -> next = list2;
}

/* Concatenates list2 onto the end of list1
 * ONLY if the two lists are not equal. If
 * they are equal, the head of list1 is returned.
 * If list1 is NULL, list2 is returned.
 */
NODE* concatenate(NODE *list1, NODE *list2)
{
	int i, n = cnt_list(list1) + cnt_list(list2);
	NODE *head = NULL;

	if (list1 == NULL) {
		return list2;
	}

	if (check_equal_lists(list1, list2) == true) {
		printf("%s\n%s\n",
				"Lists are equal and cycle would result,",
				"Will not concatenate.");
		return list1;
	}

	head = list1;
	for (i = 0; i < n; ++i) {
		list1 = list1 -> next;
	}
	list1 -> next = list2;

	return head;
}

/* Iteratively concatenates list2 onto the end of list1
 * ONLY if the two lists are not equal. If
 * they are equal, the head of list1 is returned.
 * If list1 is NULL, list2 is returned.
 */
NODE* concatenate_it(NODE *list1, NODE *list2)
{
	NODE *head = NULL;

	if (list1 == NULL) {
		return list2;
	}

	if (check_equal_lists(list1, list2) == true) {
		printf("%s\n%s\n",
				"Lists are equal and cycle would result,",
				"Will not concatenate.");
		return list1;
	}

	head = list1;
	while (list1 -> next != NULL) {
		list1 = list1 -> next;
	}
	list1 -> next = list2;

	return head;
}

/* Returns a concatenated copy of list1 and list2. */
NODE* copy_cat(NODE *list1, NODE *list2)
{
	NODE *p = list1, *copy, *head;

	head = copy = p;
	while (p != NULL) {
		copy = malloc(sizeof(NODE));
		copy -> data = p -> data;
		copy -> next = p -> next;
		p = p -> next;
		copy = copy -> next;
	}
	p = list2;
	while (p != NULL) {
		copy = malloc(sizeof(NODE));
		copy -> data = p -> data;
		copy -> next = p -> next;
		p = p -> next;
		copy = copy -> next;
	}
	return head;
}
