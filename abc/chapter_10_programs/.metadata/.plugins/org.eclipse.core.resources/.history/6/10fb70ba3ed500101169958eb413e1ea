/* Function testing functions. */

#include "dllist.h"

/* Tests list printing functions. */
void print_test(NODE *list)
{
	printf("The list:\n");
	print_list(list);

	printf("In reverse:\n");
	print_list_reverse(list);
}

void ins_del_test(NODE *list)
{
	/* Insert an item into the list & print the list. */
	DATA newd;
	newd.name = "INSERTION";
	newd.age = 1;
	newd.weight = 0;
	insert(newd, &list, 0);
	printf("With new insertion:\n");
	print_list(list);
	printf("In reverse:\n");
	print_list_reverse(list);

	/* Delete the item from the list & print the list. */
	delete(&list, 0);
	printf("With a deletion:\n");
	print_list(list);
	printf("In reverse:\n");
	print_list_reverse(list);
}
