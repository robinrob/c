/* Main function for Doubly-Linked List project. */

#include "dllist.h"

#define N 5

int main(void)
{
	NODE *list;

	list = create_list(create_array5(), 5);



	/* Insert an item into the list & print the list. */
	DATA newd;
	newd.name = "INSERTION";
	newd.age = 1;
	newd.weight = 0;
	insert(newd, &list, 0);
	printf("With new insertion:\n");
	print_list(list);
	printf("In reverse:\n");
	print_list_reverse(list);

	/* Delete the item from the list & print the list. */
	delete(&list, 0);
	printf("With a deletion:\n");
	print_list(list);
	printf("In reverse:\n");
	print_list_reverse(list);

	return 0;
}
