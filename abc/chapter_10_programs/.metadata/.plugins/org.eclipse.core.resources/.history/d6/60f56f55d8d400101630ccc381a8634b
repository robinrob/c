/* Miscellaneous functions for Doubly-Linked Lists. */

#include "dllist.h"


/* Returns a pointer to the NODE at the given list
 * position in the given list. */
NODE* get_node(NODE* list, int pos)
{
	int i = 0;
	NODE *p = list;
	assert(pos >= 0);
	assert(list != NULL);

	while (i < pos) {
		if (p == NULL) {
			return p;
		}
		p = p -> next;
		++i;
	}
	return p;
}
