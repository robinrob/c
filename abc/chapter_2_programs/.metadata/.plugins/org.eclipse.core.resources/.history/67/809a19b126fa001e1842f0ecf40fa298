/* Displays difference between above median and below median of
 * values returned by rand.
 * testMedian.c
 *
 *  Created on: Jun 19, 2009
 *      Author: user
 */

#include <stdlib.h>
#include <stdio.h>
#include <time.h>

int main(void)
{
	int median = RAND_MAX / 2, above_cnt = 0, below_cnt = 0,
	n, random, i, j, seed;

	seed = time(NULL);
	srand(seed);
	printf("Enter number of calls: ");
	scanf("%d", &n);
	for (i = 0; i < n; ++i) {
		random = rand();
		if (random > median)
			above_cnt++;
		else if (random < median)
			below_cnt++;
		if (i % 100) {
			for (j = 1; j <= 100; j++)
				printf("\n");
			printf("\n%s%d", "Displacement: ", above_cnt - below_cnt);
		}
	}
        printf("\n");

	return 0;
}

