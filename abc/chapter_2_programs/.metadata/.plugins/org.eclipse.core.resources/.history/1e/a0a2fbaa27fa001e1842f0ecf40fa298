/* Displays difference between above median and below median of
 * values returned by rand.
 * testMedian.c
 *
 *  Created on: Jun 19, 2009
 *      Author: user
 */

#include <stdlib.h>
#include <stdio.h>
#include <time.h>

int main(void)
{
	int median = RAND_MAX / 2, displacement = 0,
	n, random, i, j, seed;

	seed = time(NULL);
	srand(seed);
	printf("RAND_MAX: %d\n", RAND_MAX);
	printf("Median:   %lf\n", median);
	printf("Enter number of calls: ");
	scanf("%d", &n);
	for (i = 0; i < n; ++i) {
		random = rand();
		if (random > median)
			displacement++;
		else if (random < median)
			displacement--;
		if ((i % 100) == 0) {
			for (j = 1; j <= 23; j++)
				printf("\n");
			printf("\n%s%d", "Displacement: ", displacement);
		}
	}
        printf("\n");

	return 0;
}

