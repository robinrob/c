/* Writes a file backwards. */

#include <stdio.h>
#define MAXSTRING 100

int main(void)
{
	char fname[MAXSTRING];
	int c;
	FILE *ifp;

	fprintf(stderr, "\nInput a filename: ");
	scanf("%s", fname);
	/* 'rb' opens the file in binary mode for MS-DOS */
	ifp = fopen(fname, "rb");
	fseek(ifp, 0, SEEK_END);
	fseek(ifp, -1, SEEK_CUR);
	while (ftell(ifp) > 0) {
		c = getc(ifp);
		putchar(c);
		fseek(ifp, -2, SEEK_CUR);
	}

	return 0;
}
