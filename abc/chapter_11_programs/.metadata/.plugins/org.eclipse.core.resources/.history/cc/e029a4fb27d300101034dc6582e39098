/* Demonstrates accessing of environment variables
 * and their values.
 */

#include <stdio.h>

int main(int argc, char *argv[], char *env[])
{
	int i;

	for (i = 0; env[i] != NULL; ++i) {
		printf("%s\n", env[i]);
	}

	printf("\nzn------------------------------------------\n\n");

	printf("%12s%s\n%12s%s\n%12s%s\n%12s%s\n",
			"Name: ", getenv("NAME"),
			"User: ", getenv("USER"),
			"Shell", getenv("SHELL"),
			"Home directory", getenv("HOME"));

	return 0;
}
