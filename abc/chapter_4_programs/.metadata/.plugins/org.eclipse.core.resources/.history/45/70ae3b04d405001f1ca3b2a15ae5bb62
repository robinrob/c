/* Calculates e to an arbitrary precision using two algorithms
 * calculateE.c
 *
 *  Created on: Jan 20, 2010
 *      Author: user
 */

#include <stdio.h>

#define TOL 0.001

int main(void)
{
	double x0, x1;
	int n, i;

	x1 = 2;
	n = 1;
	while ((2.7182818284 - x1) > TOL) {
		++n;
		x1 = 2;
		for (i = 1; i < n; ++i)
			x1 *= (1 + 1 / n);
	}
	printf("e using method 1: %lf\n", x1);
	x1 = 1;
	i = 0;
	while ((2.7182818284 - x1) > TOL)
		x1 += i / factorial(i);
	printf("e using method 2: %lf\n", x1);

	return 0;
}

int factorial(int n)
{
	while (n > 1)
		n = n * (n - 1);
	return n;
}

