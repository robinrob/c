/* Calculating the complex discrimimant of a polynomial
 * of degree two.
 * polynomialDiscriminant.c
 *
 *  Created on: Jan 16, 2010
 *      Author: user
 */

#include <stdio.h>
#include "sqrt2.c"

double sqrt2(double x);

int main(void)
{
	double a, b, c, discriminant;

	printf("Enter value for a: ");
	scanf("%lf", &a);
	printf("Enter value for b: ");
	scanf("%lf", &b);
	printf("Enter value for c: ");
	scanf("%lf", &c);

	discriminant = (b * b - 4 * a * c);
	if (discriminant >= 0)
		printf("Discriminant of %lfx^2 + %lfx + %lf is: %lf\n",
				a, b, c, sqrt2(discriminant));
	else if (discriminant < 0)
		printf("Discriminant of %lfx^2 + %lfx + %lf is: %lfi\n",
						a, b, c, sqrt2(discriminant * -1));

	return 0;
}
