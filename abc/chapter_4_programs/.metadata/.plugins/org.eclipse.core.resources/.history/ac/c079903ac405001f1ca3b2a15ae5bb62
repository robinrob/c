/* Code rewritten to avoid using break and continue statements
 * betterCode.c
 *
 *  Created on: Jan 20, 2010
 *      Author: user
 */

#include <stdio.h>

int main(void)
{
	int i, n, cunt = 0, digit_cunt = 0, total = 0;
	char c;

	while (c = getchar()) {
		if (c == 'E')
			break;
		++cunt;
		if (c >= '0' && c <= '9')
			++digit_cunt;
	}
	printf("cunt: %d\ndigit_cunt: %d\n", cunt, digit_cunt);

	i = -5;
	n = 50;
	while (i < n) {
		++i;
		if (i == 0)
			continue;
		total += i;
		printf("i = %d and total = %d\n", i, total);
	}

	return 0;
}
