#include <stdio.h>

void printA(void);
void printB(void);
void printC(void);

int main(void)
{
	char c;

	while((c = getc()) != "") {
		if (c == 'a')
			printA;
		else if (c == 'b')
			printB;
		else if (c == 'c')
			printC;
	}
	return 0;
}

void printA(void)
{
	printf(
			"           ________           \n"
			"          /        \          \n"
			"         /    /\    \         \n"
			"        /    /  \    \        \n"
			"       /    /    \    \       \n"
			"      /    /______\    \      \n"
			"     /    /        \    \     \n"
			"    /    /__________\    \    \n"
			"   /    /            \    \   \n"
			"  /    /              \    \  \n"
			" /    /                \    \ \n"
			"/____/                  \____\\n"
			);
}

void printB(void)
{
	printf(
			"_____             \n"
			"|    |            \n"
			"|    |            \n"
			"|    |            \n"
			"|    |            \n"
			"|    |____________\n"
			"|                |\n"
			"|     ______     |\n"
			"|    |      |    |\n"
			"|    |______|    |\n"
			"|                |\n"
			"|________________|\n");
}

void printC(void)
{
	printf(
			" _______________ \n"
			"|               |\n"
			"|     __________|\n"
			"|    |           \n"
			"|    |           \n"
			"|    |           \n"
			"|    |           \n"
			"|    |           \n"
			"|    |           \n"
			"|    |__________ \n"
			"|               |\n"
			"|_______________|\n"
			);
}
