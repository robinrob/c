/* Testing use of an assertion in an untypical application
 * testAssertion.c
 *
 *  Created on: Jan 22, 2010
 *      Author: user
 */

#include <assert.h>
#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define ITERATIONS 100

int main(void)
{
	int a, b, cunt, i, j, total_cunt = 0;

	srand(time(NULL));
	for (j = 0; j < ITERATIONS; ++j) {
		cunt = 0;
		for (i = 0; i < 1000; ++i) {
			a = rand() % 3 + 1;
			b = rand() % 30 + 1;
			printf("a: %d, b: %d\n", a, b);
			if (b - a <= 1)
				continue;
			(b - a) > 2 ? 1 : break;
			printf("%3d\n", ++cunt);
		}
		total_cunt += cunt;
	}
	printf("Average count: %d\n", total_cunt / ITERATIONS);
	return 0;
}
