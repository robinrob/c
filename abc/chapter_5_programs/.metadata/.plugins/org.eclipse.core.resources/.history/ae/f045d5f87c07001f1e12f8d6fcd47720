/* Testing use of an assertion in an untypical application
 * testAssertion.c
 *
 *  Created on: Jan 22, 2010
 *      Author: user
 */

#include <assert.h>
#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main(void)
{
	int a, b, cunt = 0, i;

	srand(time(NULL));
	for (i = 0; i < 1000; ++i) {
		a = rand() % 3 + 1;
		b = rand() % 30 + 1;
		if (b - a <= 1)
			continue;
		assert(b - a > 2);
		printf("%3d, a: %d, b: %d\n", ++cunt, a, b);
	}
	return 0;
}
