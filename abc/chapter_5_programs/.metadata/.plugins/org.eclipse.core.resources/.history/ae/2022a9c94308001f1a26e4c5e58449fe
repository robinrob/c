/* Tells you if a given integer is prime or not
 * isPrime.c
 *
 *  Created on: Jan 23, 2010
 *      Author: user
 */

#include <stdio.h>

int isPrime(int);
void exit(int);

int main(void)
{
	int n;
	printf("Enter an integer: ");
	if (scanf("%d", &n) != 1) {
		printf("Must enter an integer!\n");
		exit(0);
	}

	int decade_cunt[(n + 10)/ 10];
	int i, cunt = 0;

	for (i = 0; i < ((n + 10)/ 10); ++i)
		decade_cunt[i] = 0;

	for (i = 1; i <= n; ++i)
		if (isPrime(i)) {
			printf("%d is a prime number\n", i);
			++decade_cunt[i / 10];
		}
	for (i = 0; i < ((n + 10)/ 10); ++i)
		printf("Primes in the %d's: %d\n", (i * 10), decade_cunt[i]);

	return 0;
}

int isPrime(int n)
{
	int k;
	for (k = n / 2; k > 1; --k)
		if (!(n % k))
			return 0;
	return 1;
}
