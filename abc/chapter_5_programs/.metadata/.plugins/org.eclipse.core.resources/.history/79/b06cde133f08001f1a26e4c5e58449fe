/* Tells you if a given integer is prime or not
 * isPrime.c
 *
 *  Created on: Jan 23, 2010
 *      Author: user
 */

#include <stdio.h>

#define LIMIT

int isPrime(int);

int main(void)
{
	int n, i;
	printf("Enter an integer: ");
	if (scanf("%d", &n) != 1)
		printf("Must enter an integer!\n");
	/*else if (isPrime(n))
		printf("%d is a prime number\n", n);
	else
		printf("%d is not a prime number\n", n);*/
	else {
		for (i = 1; i <= LIMIT; ++i)
			if (isPrime(i))
				printf("%d is a prime number\n", i);
	}

	return 0;
}

int isPrime(int n)
{
	int k;
	for (k = n / 2; k > 1; --k)
		if (!(n % k))
			return 0;
	return 1;
}
