void printB(void)
{
	printf(
			"_____             \n"
			"|    |            \n"
			"|    |            \n"
			"|    |            \n"
			"|    |            \n"
			"|    |____________\n"
			"|                |\n"
			"|     ______     |\n"
			"|    |      |    |\n"
			"|    |______|    |\n"
			"|                |\n"
			"|________________|\n");
}

void printC(void)
{
	printf(
			" ________________ \n"
			"|                | \n"
			"|     ___________|\n"
			"|    |           \n"
			"|    |           \n"
			"|    |           \n"
			"|    |           \n"
			"|    |           \n"
			"|    |           \n"
			"|    |___________\n"
			"|                |\n"
			"|________________|\n"
			);
}
