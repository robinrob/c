#include <stdio.h>

//void printA(void);
void printB(void);
void printC(void);

int main(void)
{
	char c;

	while(scanf("%c", &c)) {
		//if (c == 'a')
		//	printA;
		if (c == 'b')
			printB();
		else if (c == 'c')
			printC();
	}

	return 0;
}

