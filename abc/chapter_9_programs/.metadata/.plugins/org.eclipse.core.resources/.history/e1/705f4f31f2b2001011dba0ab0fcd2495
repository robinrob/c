/* A program to test whether an input character is a
 * tab or not.
 */

#include <stdio.h>
#include <stdlib.h>

int is_tab(char c);

int main(void)
{
	char c;
	while ((c = getchar()) != EOF) {
		if (is_tab(c)) {
			printf("c is a tab!\n");
		}
		else {
			printf("c is: %c\n", c);
		}
		getchar();
	}
	return 0;
}

//Function to test whether or not a character is a tab.
int is_tab(char c)
{
	if ((int) c == 2) {
		return 1;
	}
	else {
		return 0;
	}
}
