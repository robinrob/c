/* This program deals out poker hands a set amount of times
 * and computes the empirical probabilities of certain hands.
 */

#include "poker.h"

//Probabilities for Poker hands (pair to straight flush)
double hand_probs[] = {0.4225690276, 0.0475390156, 0.0211284514,
		0.0039400376, 0.0019807923, 0.0014405762, 0.0002400960, 0.0000153908};

int main(void)
{
    suit suit;
    int i, pips, n_deals;
    card deck[52];
    
    printf("Enter number of deals: ");
    scanf("%d", &n_deals);

    //Creating cards for the deck.
    for (i = 0; i < 52; ++i) {
    	pips = i % 13 + 1;
    	if (i < 13)
    		suit = clubs;
    	else if (i < 26)
    		suit = diamonds;
    	else if (i < 39)
    		suit = hearts;
    	else
    		suit = spades;
    	deck[i] = assign_values(pips, suit);
    }
    //Play the game.
    play_poker(deck, n_deals);
    return 0;
}






