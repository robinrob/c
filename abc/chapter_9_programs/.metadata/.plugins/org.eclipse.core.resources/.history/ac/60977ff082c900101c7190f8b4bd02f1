//Typedef for a structure that contains members of type double and complex.

#include <stdio.h>

typedef struct {
    double re;
    double im;
} complex;

typedef union {
    double d;
    complex c;
} doub_or_comp ;

typedef struct {
    int flag;
    doub_or_comp val;
} dc_type;

void mult_doub_comp(double d, complex c);

int main(void)
{
    dc_type a;
    
    a.val.d = 3.0;
    printf("%s%lf\n%s%lf\n%s%lf\n",
    		"a.val.d: ", a.val.d,
    		"a.val.c.re: ", a.val.c.re,
    		"a.val.c.im: ", a.val.c.im);
    mult_doub_comp(1.4, a.val.c);
    
    return 0;
}

void mult_doub_comp(double d, complex c)
{
	c.re *= d;
	c.im *= d;
}
