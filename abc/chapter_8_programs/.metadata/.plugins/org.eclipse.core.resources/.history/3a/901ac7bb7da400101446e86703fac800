/*Program to sort a list of words using quicksort.*/

#include "sort.h"

#define MAX_LIST 50
#define MAXWORD 50

int main(void)
{
  char *a[MAX_LIST], *s;
  int i, N;

  for (i = 0; i < MAX_LIST; ++i) {
    a[i] = calloc(MAXWORD + 1, sizeof(char));
    scanf("%s", s);
    if (strcmp(s, "\n") != 0) {
      *(a + i) = s;
    }
    else {
      break;
    }
  }
  N = i;

  printf("List before sort:\n");
  print_list(a, a + i - 1);
  for (i = 0; i < N; ++i) {
        free(a[i]);
    }
  //printf("\nQuicksorting ...\n");
  //quicksort(a, a + n - 1);
  //print_list(a, a + n - 1);
  
  return 0;
}
