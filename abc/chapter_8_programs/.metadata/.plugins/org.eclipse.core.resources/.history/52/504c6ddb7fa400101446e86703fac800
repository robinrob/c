/*Program to sort a list of words using quicksort.*/

#include "sort.h"

#define MAX_LIST 50
#define MAX_WORD 50

int main(void)
{
  char *a[MAX_LIST], s[MAX_WORD];
  int i, N;

  for (i = 0; i < MAX_LIST; ++i) {
    scanf("%s", s);
    if (strcmp(s, "\n\0") != 0) {
      *(a + i) = calloc(MAX_WORD, sizeof(char));
      strcpy(*(a + i), s);
    }
    else {
      break;
    }
  }
  N = i;

  printf("List before sort:\n");
  print_list(a, a + N - 1);
  for (i = 0; i < N; ++i) {
       free(*(a + i));
  }
  //printf("\nQuicksorting ...\n");
  //quicksort(a, a + n - 1);
  //print_list(a, a + n - 1);
  
  return 0;
}
