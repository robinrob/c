/* A way to represent a boolean value using 1 bit! */

#include <stdio.h>
#include <stdbool.h>

union boolean {
	unsigned val : 1;
};

typedef union boolean boolean;

int main(void)
{
	boolean b1;
	bool a = true;
	b1.val = 1;
	if (b1.val) {
		printf("true\n");
	}
	else {
		printf("false\n");
	}
	return 0;
}

/* Test bit-field boolean value. */
test_boolean(boolean b)
{
	if (b) {
		printf("true\n");
	}
	else {
		printf("false\n");
	}
}

/* Test C99 bool macro. */
test_bool(bool b)
{
	if (b) {
		printf("true\n");
	}
	else {
		printf("false\n");
	}
}
