/* A way to represent a boolean value using 1 bit! */

#include <stdio.h>
#include <stdbool.h>

union boolean {
	unsigned val : 1;
};

typedef union boolean boolean;

int main(void)
{
	boolean b;
	bool a = true;
	b.val = 1;
	if (b.val) {
		printf("true\n");
	}
	else {
		printf("false\n");
	}
	return 0;
}
